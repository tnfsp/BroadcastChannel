---
import { getEnv } from '../lib/env'

const { channel } = Astro.props

const tags = (getEnv(import.meta.env, Astro, 'TAGS') || '')
  .split(',')
  .map((tag) => tag.trim())
  .filter(Boolean)
  .slice(0, 10)
---

{
  channel?.descriptionHTML && channel?.descriptionHTML.length > 0 && (
    <div class="text-box" id="site-intro" set:html={channel?.descriptionHTML} />
  )
}

{
  tags.length > 0 && (
    <div class="tag-quick-nav" aria-label="Quick tags">
      <div class="tag-quick-nav-title">Tags</div>
      <div class="tag-quick-nav-list">
        {tags.map((tag) => (
          <a class="tag-chip" href={`/search/%23${tag}`} title={`#${tag}`}>
            #{tag}
          </a>
        ))}
      </div>
    </div>
  )
}

<style>
  #site-intro {
    color: var(--foreground-secondary-color);
    background: linear-gradient(135deg, rgba(233, 216, 166, 0.5), rgba(255, 251, 244, 0.94));
    word-break: break-word;
    border: 1px solid var(--border-color);
    border-radius: 14px;
    box-shadow: var(--shadows);
    padding: 12px 14px;

    & :global(.emoji) {
      font-style: normal;
      margin-right: 2px;
    }
  }

  .tag-quick-nav {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin: 12px 0 16px;
    padding: 12px 14px;
    border-radius: 16px;
    background: var(--surface);
    border: 1px solid var(--border-color);
    box-shadow: var(--shadows);
  }

  .tag-quick-nav-title {
    font-weight: 700;
    color: var(--accent-strong);
    font-size: 0.9em;
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }

  .tag-quick-nav-list {
    display: flex;
    gap: 8px;
    overflow-x: auto;
    padding-bottom: 2px;
    scrollbar-width: thin;
  }

  .tag-chip {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    padding: 7px 12px;
    border-radius: 999px;
    background: rgba(255, 251, 244, 0.9);
    border: 1px solid var(--border-color);
    color: var(--accent);
    text-decoration: none;
    white-space: nowrap;
    font-weight: 600;
    font-size: 0.95em;
    transition:
      color 120ms ease,
      border-color 120ms ease,
      transform 120ms ease;
  }

  .tag-chip:hover,
  .tag-chip:focus-visible {
    color: #fff;
    background: var(--accent-strong);
    border-color: var(--accent-strong);
    transform: translateY(-1px);
  }

  @media (max-width: 720px) {
    .tag-quick-nav {
      margin: 10px 0 12px;
      padding: 10px;
    }
  }
</style>
