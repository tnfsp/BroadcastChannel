---
import { getEnv } from '../lib/env'

const { channel } = Astro.props

const tags = (getEnv(import.meta.env, Astro, 'TAGS') || '').split(',').map(tag => tag.trim()).filter(Boolean).slice(0, 10)
---

{
  channel?.descriptionHTML && channel?.descriptionHTML.length > 0 && (
    <div class="text-box" id="site-intro" set:html={channel?.descriptionHTML} />
  )
}

{
  tags.length > 0 && (
    <div class="tag-quick-nav" aria-label="Quick tags">
      <div class="tag-quick-nav-title">Tags</div>
      <div class="tag-quick-nav-list">
        {tags.map((tag) => (
          <a class="tag-chip" href={`/search/%23${tag}`} title={`#${tag}`}>
            #{tag}
          </a>
        ))}
      </div>
    </div>
  )
}

<style>
  #site-intro {
    color: var(--secondary-color);
    background-color: var(--code-background-color);
    word-break: break-word;

    & :global(.emoji) {
      font-style: normal;
      margin-right: 2px;
    }
  }

  .tag-quick-nav {
    display: flex;
    flex-direction: column;
    gap: 8px;
    margin: 12px 0 16px;
    padding: 10px 12px;
    border-radius: 10px;
    background: var(--background-color);
    border: 1px solid var(--border-color);
  }

  .tag-quick-nav-title {
    font-weight: 500;
    color: var(--foreground-secondary-color);
    font-size: 0.95em;
    letter-spacing: 0.1px;
  }

  .tag-quick-nav-list {
    display: flex;
    gap: 8px;
    overflow-x: auto;
    padding-bottom: 2px;
    scrollbar-width: thin;
  }

  .tag-chip {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    padding: 6px 10px;
    border-radius: 999px;
    background: transparent;
    border: 1px solid var(--border-color);
    color: var(--secondary-color);
    text-decoration: none;
    white-space: nowrap;
    font-weight: 500;
    font-size: 0.95em;
    transition: color 120ms ease, border-color 120ms ease, transform 120ms ease;
  }

  .tag-chip:hover,
  .tag-chip:focus-visible {
    color: var(--link-color);
    border-color: var(--link-color);
    transform: translateY(-1px);
  }

  @media (max-width: 720px) {
    .tag-quick-nav {
      margin: 10px 0 12px;
      padding: 10px;
    }
  }
</style>
